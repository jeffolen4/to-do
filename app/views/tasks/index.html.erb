<div class="container">
  <div class="row">

    <h1>All Tasks</h1>

    <table class="table table-hover">
      <thead><tr><th>Name</th></tr>
      <!-- <tfoot><tr><td colspan=2><button type="button"><a href="/tasks/new">Add New</a></button>
        </td></tr></tfoot> -->
      <tbody>
      <% @tasks.each do |task| %>
      <tr><td><a href="tasks/<%= task.id %>/edit"><%= task.description %></a></td>
        <td><%= task.done %></td><tr>
      <% end %>
    </tbody>
    </table>

    <h3>New Task</h3>
    <% if @task.errors.any? %>
    <h3>Please fix these errors:</h3>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <form action="/tasks" method="post">
      <label for="task_description">Description</label>
      <input id="task_description" name="description" type="text">
      <button>Create Task</button>

  </div>
</div>
